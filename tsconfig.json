{
  "compilerOptions": {
    "target": "es5", // Or "es2015", "es2016", etc., depending on your preference and environment
    "lib": ["es5", "dom"],
    "sourceMap": true,
    "types": ["cypress", "node"], // Crucial for Cypress and Node.js type definitions
    "isolatedModules": true, // Recommended for better build performance
    "esModuleInterop": true, // Allows default imports for CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts", // Include all TypeScript files in your project
    "cypress/**/*.ts" // Specifically include Cypress test files
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}